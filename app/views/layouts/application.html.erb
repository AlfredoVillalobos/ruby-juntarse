<!DOCTYPE html>
<html>
  <head>
    <title>Juntarse</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>    
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="//maps.google.com/maps/api/js?key=AIzaSyB9A7I1eFppjXax7pr0E_l67XmnUP6Ob8M"></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
    <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>
  </head>

  <body>
    <%= render 'layouts/navbar' if current_user.present?%>
    <%= yield %> 
    <script>
      var viz_events = false;
      var viz_hamburguer = false;
      $('.hamburger').click(function(){
        $(this).toggleClass("is-active");
        $('.last-events').fadeOut()
        $('.events-container').removeClass("active");
        $('.hamburger-perfil').fadeIn(function(){
          viz_hamburguer = true;
        })
      })
      $('#events').click(function(){     
        is_active = $('.events-container').hasClass("active")
        if (!is_active) {
          $('.events-container').addClass("active");
          $.post("/events/last_events", "script"); 
        }else if(is_active){
          $('.last-events').fadeOut();
          $('.events-container').removeClass("active");
        }
      })
      $(document).click(function(){
        if (viz_hamburguer) {$('.hamburger-perfil').fadeOut(); viz_hamburguer = false;}
      })
    </script> 
  </body>
</html>
