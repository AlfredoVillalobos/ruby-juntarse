<h6 class="title">Invitaciones</h6>
<div class="line-separation"></div>
<div class="invitations">
  <ul>
      <% @invitations.each do |invitation| %>
        <% if invitation.from == current_user %>
          <li class="invitation-box <% if invitation.has_response? %>response<% else %>no-response<% end %>" data-invitation-id="<%= invitation.id %>">    
            <img class="img-sport" src='<%= image_path("sports/#{invitation.sport.image}") %>' width="30px" title="<%= invitation.sport.name %>"> 
            <div class="right">
              <h6><%= h truncate(invitation.content, length: 52) %></h6>
            </div>
            <div class="left">      
              <%= image_tag invitation.to.image, id: 'image-user', class: 'img-icon'%>
              <div class="text user send"><h6><%= h truncate(invitation.to.name.split[0], length: 8) %></h6></div>
            </div>
            <div class="invitation-time">
              <%= invitation.created_at.to_formatted_s(:short) %>
            </div>
          </li>   
        <% else %>
          <li class="invitation-box <% if invitation.has_response? %>response<% else %>no-response<% end %>" data-invitation-id="<%= invitation.id %>">    
            <img class="img-sport" src='<%= image_path("sports/#{invitation.sport.image}") %>' width="30px" title="<%= invitation.sport.name %>"> 
            <div class="left">      
              <%= image_tag invitation.from.image, id: 'image-user', class: 'img-icon'%>
              <div class="text user received"><h6><%= h truncate(invitation.from.name.split[0], length: 8) %></h6></div>
            </div>
            <div class="right">
              <h6><%= h truncate(invitation.content, length: 52) %></h6>
            </div>
            <div class="invitation-time">
              <%= invitation.created_at.to_formatted_s(:short) %>
            </div> 
          </li>
        <% end %>
      <% end %>
    </ul>
</div>
